# Environment variables template for StudyHub AI
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-very-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///studyhub.db
# For PostgreSQL: postgresql://username:password@localhost/studyhub_db

# AI Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=app/static/uploads

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/studyhub.log